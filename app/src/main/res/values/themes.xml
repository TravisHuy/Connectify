<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
    </style>

    <style name="Input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorFocusedHighlight">@color/colorAccentDark</item>
        <item name="android:textColorHint">@color/colorAccentBlueDark_50</item>
        <item name="boxStrokeColor">@color/colorAccentDark</item>
    </style>
</resources>